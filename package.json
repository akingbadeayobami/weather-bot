{
    "name": "carlabs_weather_bot",
    "version": "1.0.0",
    "description": "An Awesome Weather Bot",
    "main": "app.js",
    "scripts": {
        "install": "install && npm run install-client",
        "install-client": "cd client && npm install",
        "start-client": "npm start --prefix client",
        "start-server-dev": "nodemon --exec npm run start",
        "dev": "concurrently \"npm run start-server-dev\" \"npm run start-client\"",
        "start": "node ./bin/www",
        "test": "npm run test-client && npm run test-server",
        "test-client": "cd client && npm run test",
        "test-server": "set NODE_ENV=test&&mocha --timeout 5000 server-tests"
    },
    "keywords": [
        "weather",
        "bot"
    ],
    "author": "Akingbade Ayobami",
    "license": "ISC",
    "dependencies": {
        "bluebird": "^3.5.1",
        "body-parser": "^1.18.2",
        "concurrently": "^3.5.1",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "dateformat": "^3.0.2",
        "debug": "^3.1.0",
        "dotenv": "^4.0.0",
        "enum": "^2.5.0",
        "express": "^4.16.2",
        "jade": "^1.11.0",
        "lodash": "^4.17.4",
        "mongoose": "^5.0.1",
        "morgan": "^1.9.0",
        "node-wit": "^4.3.0",
        "randomstring": "^1.1.5",
        "request": "^2.83.0"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "mocha": "^5.0.0",
        "nock": "^9.1.6",
        "supertest": "^3.0.0"
    }
}